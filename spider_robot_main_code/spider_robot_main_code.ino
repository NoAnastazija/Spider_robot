void loop() 
{
  while(Serial.available())
  {
    switch (Serial.read()) {
      case 'f':
        step_forward(2);
        break;

      case 'p':
        step_back(2);
        break;

      case 'l':
        turn_left(1);
        break;

      case 'm'
        turn_right(1);
        break;
    }
  }
}

